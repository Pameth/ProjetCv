                <th>Adresse</th>
                <th>Email</th>
                <th>Tel</th>
            </tr>
        </div>

        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td>{{ cv.nom }}</td>
                <td>{{ cv.prenom }}</td>
                <td>{{ cv.age }}</td>
                <td>{{ cv.adresse }}</td>
                <td>{{ cv.email }}</td>
                <td>{{ cv.tel }}</td>
                <td colspan="2">
                    <a href="{{ path('cv_show', {'id': cv.id}) }}" class="btn btn-success">Voir tout</a>
